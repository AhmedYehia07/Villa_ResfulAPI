@model List<VillaDto>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Villa List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-circle-dotted"></i> Create New Villa</a>
		</div>
	</div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Occupacy
				</th>
				<th>
					Price
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var Dto in Model)
			{
				<tr>
					<td>@Dto.Name</td>
					<td>@Dto.Occupancy</td>
					<td>@((Dto.Rate).ToString("c"))</td>
					<td class="text-center">
						<a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@Dto.Id" class="btn btn-primary"><i class="bi bi-pencil"></i> Edit</a>
						<a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@Dto.Id" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>