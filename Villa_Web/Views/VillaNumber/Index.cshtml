@model List<VillaNumberDto>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Villa Number List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-circle-dotted"></i> Create New Villa Number</a>
		</div>
	</div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Villa Number
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var Dto in Model)
			{
				<tr>
					<td>@Dto.Villa.Name</td>
					<td>@Dto.VillaNo</td>
					<td class="text-center">
						<a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@Dto.VillaNo" class="btn btn-primary"><i class="bi bi-pencil"></i> Edit</a>
						<a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@Dto.VillaNo" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>