@using Villa_Web.Models.VM
@model VillaNumberUpdateVm

<form asp-action="DeleteVillaNumber">
	<br />
	<input hidden asp-for="VillaNumber.VillaNo" />
	<div class="container border p-3">
		<h1 class="text-danger">Delete Villa Number</h1>
		<hr />
		<div class="row">
			<div class="col-2">
				<label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px"></label>
			</div>
			<div class="col-10 pb-3">
				<input disabled asp-for="VillaNumber.VillaNo" class="form-control" />
			</div>
			<div class="col-2">
				<label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size:20px">Villa</label>
			</div>
			<div class="col-10 pb-3">
				<select disabled asp-for="VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList"></select>
			</div>
			<div class="col-2">
				<label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea disabled asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5"></textarea>
			</div>
			<div class="col-5 offset-2">
				<a asp-action="Index" asp-controller="VillaNumber" class="btn btn-primary form-control">Back to list</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Delete" class="btn btn-danger form-control" />
			</div>
		</div>
	</div>
</form>